/* pages/shudon/sy.wxss */

.bg{
  height: 100%;
}
.img{
  position:absolute;
  display:block;
  width: 100%;
  height: 100%;
  z-index:-1;  
  /* 背景图片 */
}
.item-list {
  overflow: hidden;
  padding-top: 200rpx;
  color: #ffffff;
  /* 字体颜色 */
}
.item-text{
  overflow: hidden;
}
.textf{
  font-size: 40rpx;
  text-align: center;
  line-height: 1.4;
  /* 居中以及行间距为1.4倍 */
}
.textb{
  font-size: 60rpx;
  text-align: center;
  line-height: 1.5;
  /* 居中行间距1.6倍 */
}
.butblo{
  width: 100%;
  margin-top: 80rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  /* 两按钮至于此框 */
}
.button1{
  font-size: 32rpx;
  color: #000000;
  background-color: #dbdfe7;
  width: 290rpx;
  height: 85rpx;
  line-height: 85rpx;
  border-radius: 40rpx;
  text-align: center;
  opacity: 0.8;
  /* 透明度置0.8居中 */
}
.button1-act{
  background-color: #cbcfd6;
}
.button2{
  margin-top: 60rpx;
  font-size: 32rpx;
  color: #ffffff;
  background-color: #43a8ec;
  width: 290rpx;
  height: 85rpx;
  line-height: 85rpx;
  border-radius: 40rpx;
  text-align: center;
  opacity: 0.9;
}
.button2-act{
  background-color: #3c97d4;
}
.block1{
  display: flex;
  margin-left: 220rpx;
  margin-top: 70rpx;
  font-family: Microsoft YaHei;
  font-size: 30rpx;
  font-weight: 600;
  color: #fffffff8;
}
.block2{
  line-height: 1.5;
}